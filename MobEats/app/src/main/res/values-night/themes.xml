<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="mainBackground">
        <item name="android:background">@color/black</item>
    </style>

    <style name="topBarBackground">
        <item name="android:background">#404040</item>
    </style>

    <style name="itemCellBackground">
        <item name="android:src">@drawable/round_corner_with_border_dark</item>
    </style>

    <style name="changeDataBackground">
        <item name="android:src">@drawable/round_corner_light_gray</item>
    </style>

    <style name="DialogWindowBackground">
        <item name="android:background">@drawable/spinner_launcher_background_light</item>
    </style>

    <style name="InfoWindowBackground">
        <item name="android:background">@drawable/spinner_launcher_background_dark</item>
    </style>

    <style name="logoMobEats">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="findFoodButton">
        <item name="android:background">@drawable/round_corner_launcher_background_dark</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">6dp</item>
    </style>

    <style name="findFoodOnMapButton">
        <item name="android:background">@color/ic_launcher_background</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="mainTextButton">
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">6dp</item>
        <item name="android:background">@drawable/round_corner_light</item>
    </style>

    <style name="mainImageButton">
        <item name="android:background">@drawable/round_corner_light</item>
    </style>

    <style name="mainImageButtonWithStroke">
        <item name="android:background">@drawable/round_corner_light_with_stroke</item>
    </style>

    <style name="mainImageButtonReverse">
        <item name="android:background">@drawable/round_corner_dark</item>
    </style>

    <style name="mainTextEdit">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColorHint">#B8B8B8</item>
        <item name="android:textColorHighlight">#B8B8B8</item>
        <item name="colorAccent">#B8B8B8</item>
        <item name="backgroundTint">#B8B8B8</item>
    </style>

    <style name="mainTextEditReverse">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColorHint">#404040</item>
        <item name="android:textColorHighlight">#404040</item>
        <item name="backgroundTint">#404040</item>
    </style>

    <style name="mainTextSpinner">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/spinner_launcher_background_dark</item>
    </style>

    <style name="mainText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="mainTextReverse">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="mainMediumText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif-black"</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="mainMediumTextReverse">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif-black"</item>
        <item name="android:padding">6dp</item>
    </style>

    <style name="mainLargeText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">30sp</item>
        <item name="android:fontFamily">sans-serif-black"</item>
    </style>

    <style name="leadText">
        <item name="android:background">@drawable/round_corner_launcher_background_dark</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:textSize">40sp</item>
        <item name="android:fontFamily">sans-serif-black"</item>
    </style>

    <style name="accountIcon">
        <item name="android:background">@drawable/circle_light</item>
        <item name="android:padding">6dp</item>
        <item name="android:src">@drawable/ic_account_dark</item>
    </style>

    <style name="itemCellIcon">
        <item name="srcCompat">@drawable/ic_restaurant_light</item>
    </style>


    <!-- Base application theme. -->
    <style name="Theme.MobEats" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
</resources>