<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="mainBackground">
        <item name="android:background">@color/white</item>
    </style>

    <style name="topBarBackground">
        <item name="android:background">#B8B8B8</item>
    </style>

    <style name="changeDataBackground">
        <item name="android:src">@drawable/round_corner_dark_gray</item>
    </style>

    <style name="logoMobEats">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="mainTextButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/round_corner_dark</item>
    </style>
    
    <style name="mainImageButton">
        <item name="android:background">@drawable/round_corner_dark</item>
    </style>

    <style name="mainTextEdit">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColorHint">#404040</item>
        <item name="android:textColorHighlight">#404040</item>
        <item name="backgroundTint">#404040</item>
    </style>

    <style name="mainTextEditReverse">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColorHint">#B8B8B8</item>
        <item name="android:textColorHighlight">#B8B8B8</item>
        <item name="colorAccent">#B8B8B8</item>
        <item name="backgroundTint">#B8B8B8</item>
    </style>

    <style name="mainText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="mainMediumText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif-black"</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="mainLargeText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">30sp</item>
        <item name="android:fontFamily">sans-serif-black"</item>
    </style>

    <style name="accountImage">
        <item name="android:background">@drawable/circle_dark</item>
        <item name="android:padding">6dp</item>
        <item name="android:src">@drawable/ic_account_light</item>
    </style>

    <!-- Base application theme. -->
    <style name="Theme.MobEats" parent="Theme.MaterialComponents.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/cardview_dark_background</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
</resources>